<div class="uk-margin uk-width-expand uk-margin-auto">
  <div class="uk-margin">

    <div class="uk-flex uk-flex-center uk-flex-middle uk-grid-small" uk-grid>
      <div class="uk-width-expand uk-text-right">
        <a href="add-stadium">
          <button class="uk-button uk-button-secondary">Add Stadium</button>
        </a>
      </div>
    </div>

  </div>

  <div class="uk-child-width-expand uk-margin-medium uk-grid-width-1-3" uk-grid>
    {{#each stadiums}}
      <div class="uk-width-1-3">
        <h3 class="uk-title">{{name}}</h3>
        <div style="height: 250px; width: 100%; background-image: url('{{imageUrl}}'); background-size: cover; background-position: center;  background-repeat: no-repeat;"></div>
        <div class="uk-text-center uk-margin">{{location}}</div>
        <div class="uk-margin uk-width-2-3 uk-text-left">
          Capacity: {{capacity}} <br>
          Built: {{built}} <br>
          Club: {{teams}} <br>
        </div>
        <div class="uk-width-expand uk-flex uk-flex-between uk-flex-bottom">
          <div class="uk-text-meta">Added by: {{addedBy.firstName}} {{addedBy.lastName}}</div>
          <div>
            <a href="/delete-stadium/{{_id}}"><i class="fas fa-times-circle" style="color: red; font-size: 28px;" title="Delete" uk-tooltip></i></a>
            <a href="/edit-stadium/{{_id}}"><i class="fas fa-edit" style="font-size: 28px;" title="Edit" uk-tooltip></i></a>
            </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>