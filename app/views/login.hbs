{{> welcome-menu }}

<div class="uk-container uk-margin uk-margin-top">
    <div class="uk-margin-top uk-child-width-expand uk-flex-center uk-flex-middle uk-text-center" uk-grid>
        <div>
            <div>
                <h3 class="uk-text-center">Log in</h3>
                <form action="/login" method="POST">
                    <div class="uk-margin uk-text-left">
                        <label class="uk-form-label" for="form-stacked-text">Email:</label>
                        <div class="uk-inline uk-width-1-1">
                             <span class="uk-form-icon" uk-icon="icon: mail"></span><input class="uk-input uk-form-large" type="text" name="email">
                        </div>
                    </div>
                    <div class="uk-margin uk-text-left">
                        <label class="uk-form-label" for="form-stacked-text">Password:</label>
                        <div class="uk-inline uk-width-1-1">
                            <span class="uk-form-icon" uk-icon="icon: lock"></span><input class="uk-input uk-form-large" type="password" name="password">
                        </div>
                    </div>
                    <div class="uk-margin">
                        <button class="uk-button uk-button-primary uk-button-large uk-width-1-1">Login</button>
                    </div>
                    <div class="uk-text-left uk-text-small"></div>
                </form>
                {{> error }}
            </div>
        </div>
        <div>
            <img src="https://res.cloudinary.com/dczqccpne/image/upload/v1615905074/c_383_bfdcd56c-4f2d-4263-bb4f-0a540fcb8bc6_rwwpd0.jpg">
        </div>
    </div>
</div>